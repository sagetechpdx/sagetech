---
import { Image } from "astro:assets";
import Facebook from "../../assets/facebook.svg";
import Google from "../../assets/linkedin.svg";
import Logo from "../../assets/sage_600px.png";
import Yelp from "../../assets/youtube.svg";
import ShortForm from "../ui/ShortForm.astro";

const logos = [
  { name: "Google", src: Google, link: "https://maps.app.goo.gl/YV6bjX1et2YfEPg69" },
  { name: "Facebook", src: Facebook, link: "https://facebook.com/sagetechpdx" },
  { name: "Yelp", src: Yelp, link: "https://www.yelp.com/biz/sage-tech-portland" },
];

const links = [
  { name: "About us", href: "#about" },
  { name: "Services", href: "#services" },
  { name: "Use Cases", href: "#cases" },
  { name: "Pricing", href: "#testimonials" },
  { name: "Blog", href: "#home" },
];
---

<section class="sm:px-5">
  <div class="w-full max-w-[1240px] mx-auto">
    <div
      class="px-[15px] bg-dark text-gray py-[55px] lg:px-[60px] sm:rounded-t-[45px]"
    >
      <div>
        <div
          class="flex flex-col lg:flex-row gap-7 items-center justify-between"
        >
          <picture>
            <a href="#home">
              <Image src={Logo} alt="Logo" />
            </a>
          </picture>
          <ul class="flex flex-col sm:flex-row gap-5">
            {
              links.map((link) => {
                return (
                  <li class="text-center">
                    <a class="underline" href={link.href}>
                      {link.name}
                    </a>
                  </li>
                );
              })
            }
          </ul>
          <ul class="flex gap-5">
            {
              logos.map((logo) => {
                return (
                  <li>
                    <a href={logo.link} target="_blank">
                      <picture>
                        <img src={logo.src} alt={logo.name} />
                      </picture>
                    </a>
                  </li>
                );
              })
            }
          </ul>
        </div>

        <div class="flex flex-col lg:flex-row mt-[66px] mb-[51px]">
          <div
            class="flex text-center lg:text-start flex-col w-full lg:w-[30%]"
          >
            <h3 class="mb-5 text-center md:text-left text-2xl text-green">Contact us</h3>
            <div class="flex flex-col justify-between gap-4">
              <span> Email: info@sagetech.support </span>
              <span> Phone: (503) 454-6438 </span>
            </div>
          </div>
          <div class="flex-grow my-10 lg:my-0 lg:ml-12">
            <ShortForm />
          </div>
        </div>
      </div>

      <div class="h-[1px] bg-gray mb-5"></div>
      <div
        class="flex flex-col lg:flex-row h-20 justify-center mt-4 text-center md:justify-between md:mt-0"
      >
        <span
          >2024 Sage Tech <a
            class="underline"
            target="_blank"
            href="/">Sage Tech</a
          > 
         </span
        >&nbsp;
      </div>
    </div>
  </div>
</section>
